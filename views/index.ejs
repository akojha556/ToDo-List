<%- include("header"); -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <% newListItems.forEach((item)=> { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="itemId" value=<%=item._id%>  onChange="this.form.submit()" />
                    <p>
                        <%= item.name %>
                    </p>
                    <input type="hidden" name="listName" value=<%=listTitle%> />
                </div>
            </form>
            <% }); %>

                <form action="/" method="post" class="item">
                    <input type="text" name="newItemName" placeholder="New Item" autocomplete="off">
                    <button type="submit" class="button" name="listName" value=<%=listTitle%>>+</button>
                </form>
    </div>

    <%- include("footer"); -%>